<h1>Basket</h1>

<div id="card">
  {{#if courses.length}}
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Amount</th>
          <th>Price per one</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each courses}}
          <tr>
            <td>{{title}}</td>
            <td>{{count}}</td>
            <td>{{price}}</td>
            <td>
              <button class="btn btn-small js-remove" data-id="{{id}}">
                Delete
              </button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>

    <p>
      <strong>Total:</strong><span class="price">{{price}}</span>
    </p>

    <form action="/orders" method="POST">
      <button type="submit" class="btn">Make order</button>
    </form>
  {{else}}
    <p>Basket is empty</p>
  {{/if}}

</div>