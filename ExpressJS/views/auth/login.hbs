<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Login</a></li>
        <li class="tab col s6"><a href="#registration">Registration</a></li>
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">

      {{#if loginError}}
        <p class="alert">{{loginError}}</p>
      {{/if}}

      <h1>Login in shop</h1>
      <form action="/auth/login" method="POST">
        <div class="input-field">
          <input
            id="email"
            name="email"
            type="email"
            class="validate"
            required
          />
          <label for="email">Email</label>
          <span class="helper-text" data-error="Input e-mail"></span>
        </div>

        <div class="input-field">
          <input
            id="password"
            name="password"
            type="password"
            class="validate"
            required
          />
          <label for="password">Password</label>
          <span class="helper-text" data-error="Input password"></span>
        </div>

        <input type="hidden" name="_csrf" value="{{csrf}}" />

        <button class="btn btn-primary" type="submit">
          Login
        </button>
      </form>
    </div>
    <div id="registration" class="col s6 offset-s3">
      {{#if regError}}
        <p class="alert">{{regError}}</p>
      {{/if}}
      <h1>Registration in shop</h1>
      <form action="/auth/registration" method="POST" novalidate>
        <div class="input-field">
          <input
            id="reg-email"
            name="email"
            type="email"
            class="validate"
            
            required
          />
          <label for="reg-email">Email</label>
          <span class="helper-text" data-error="Input e-mail"></span>
        </div>

        <div class="input-field">
          <input id="name" name="name" type="text" class="validate" required />
          <label for="name">Name</label>
          <span class="helper-text" data-error="Input name"></span>
        </div>

        <div class="input-field">
          <input
            id="reg-password"
            name="password"
            type="password"
            class="validate"
            required
          />
          <label for="reg-password">Password</label>
          <span class="helper-text" data-error="Input password"></span>
        </div>

        <div class="input-field">
          <input
            id="confirm"
            name="confirm"
            type="password"
            class="validate"
            required
          />
          <label for="confirm">Repeat password</label>
          <span class="helper-text" data-error="Input password"></span>
        </div>

        <input type="hidden" name="_csrf" value="{{csrf}}" />

        <button class="btn btn-primary" type="submit">
          Registration
        </button>
      </form>
    </div>
  </div>
</div>